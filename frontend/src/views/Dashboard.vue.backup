<script setup>
import { ref, computed, onMounted, onUnmounted } from 'vue'
import { useRouter } from 'vue-router'
import { useAuthStore } from '@/store/auth'
import { getDashboard } from '@/api/green_finance'
import { getScrollAnnouncements } from '@/api/announcement'
import { 
  Money, 
  TrendCharts, 
  Briefcase, 
  Wallet, 
  Document, 
  List, 
  CircleCheckFilled,
  Refresh,
  User,
  Bottom,
  ArrowRight
} from '@element-plus/icons-vue'

const router = useRouter()
const authStore = useAuthStore()

const loading = ref(false)

const stats = ref({
  green_loan_balance: 0,
  customer_count: 0,
  green_loan_ratio: 0,
  growth_rate: 0,
  green_investment: 0,
  green_leasing: 0,
  green_wealth_management: 0,
  green_underwriting: 0
})

const todos = ref([])

const announcements = ref([])
const currentIndex = ref(0)
let bannerTimer = null

const currentAnnouncement = computed(() => {
  return announcements.value[currentIndex.value] || {}
})

const loadAnnouncements = async () => {
  try {
    const data = await getScrollAnnouncements()
    announcements.value = data || []
    if (announcements.value.length > 0) {
      startBannerRotation()
    }
  } catch (error) {
    console.error('Failed to load announcements:', error)
  }
}

const startBannerRotation = () => {
  if (bannerTimer) {
    clearInterval(bannerTimer)
  }
  bannerTimer = setInterval(() => {
    currentIndex.value = (currentIndex.value + 1) % announcements.value.length
  }, 3000) // 每3秒滚动一次
}

const formatAmount = (value) => {
  if (value === null || value === undefined || value === '') return '0.00万亿'
  const numValue = typeof value === 'string' ? parseFloat(value) : Number(value)
  if (isNaN(numValue)) return '0.00万亿'
  const trillionValue = numValue / 10000
  const formatted = trillionValue.toLocaleString('zh-CN', {
    minimumFractionDigits: 2,
    maximumFractionDigits: 2
  })
  return `${formatted}万亿`
}

const getGreeting = () => {
  const hour = new Date().getHours()
  if (hour < 6) return '夜深了'
  if (hour < 9) return '早上好'
  if (hour < 12) return '上午好'
  if (hour < 14) return '中午好'
  if (hour < 18) return '下午好'
  return '晚上好'
}

const getCountType = (count) => {
  if (count >= 10) return 'danger'
  if (count >= 5) return 'warning'
  return 'success'
}

const loadDashboard = async () => {
  try {
    loading.value = true
    const data = await getDashboard()
    stats.value = data.stats
    todos.value = data.todos || []
  } catch (error) {
    console.error('Failed to load dashboard:', error)
  } finally {
    loading.value = false
  }
}

const refreshData = () => {
  loadDashboard()
}

const handleTodoClick = (category) => {
  router.push('/green-identify/pending')
}

onMounted(() => {
  loadDashboard()
  loadAnnouncements()
})

onUnmounted(() => {
  if (bannerTimer) {
    clearInterval(bannerTimer)
  }
})
</script>

